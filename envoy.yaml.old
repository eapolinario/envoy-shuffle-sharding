                envoy.lb:
                  host_id: "4"
        - endpoint:
            address:
              socket_address:
                address: host.docker.internal
                port_value: 8006
            metadata:
              filter_metadata:
                envoy.lb:
                  host_id: "5"
        - endpoint:
            address:
              socket_address:
                address: host.docker.internal
                port_value: 8007
            metadata:
