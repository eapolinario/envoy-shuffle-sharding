static_resources:
  listeners:
  - name: listener_0
    address:
      socket_address:
        address: 0.0.0.0
        port_value: 10000
    filter_chains:
    - filters:
      - name: envoy.filters.network.http_connection_manager
        typed_config:
          "@type": type.googleapis.com/envoy.extensions.filters.network.http_connection_manager.v3.HttpConnectionManager
          stat_prefix: ingress_http
          codec_type: AUTO
          route_config:
            name: local_route
            virtual_hosts:
            - name: backend
              domains: ["*"]
              routes:
              - match:
                  prefix: "/"
                route:
                  cluster: service_backend
          http_filters:
          - name: envoy.filters.http.lua
            typed_config:
              "@type": type.googleapis.com/envoy.extensions.filters.http.lua.v3.Lua
              inline_code: |
                function envoy_on_request(request_handle)
                  -- Get customer ID from header
                  local customer_id = request_handle:headers():get("x-customer-id")
                  
                  if customer_id == nil then
                    request_handle:respond(
                      {[":status"] = "400"},
                      "Missing x-customer-id header"
                    )
                    return
                  end
                  
                  -- Configuration
                  local total_hosts = 8  -- Total number of backend servers
                  local shard_size = 2   -- Number of hosts per customer shard
                  
                  -- Generate shuffle shard: hash customer ID with different salts
                  local selected_hosts = {}
                  local seen = {}
                  
                  for i = 0, shard_size - 1 do
                    local hash_input = customer_id .. "_salt_" .. i
                    local hash_value = 0
                    
                    -- Simple hash function (FNV-1a style)
                    for j = 1, #hash_input do
                      hash_value = bit32.bxor(hash_value, string.byte(hash_input, j))
                      hash_value = (hash_value * 16777619) % 4294967296
                    end
                    
                    local host_index = (hash_value % total_hosts)
                    
                    -- Avoid duplicates (re-hash if collision)
                    local attempts = 0
                    while seen[host_index] and attempts < total_hosts do
                      hash_value = (hash_value * 31 + attempts) % 4294967296
                      host_index = (hash_value % total_hosts)
                      attempts = attempts + 1
                    end
                    
                    if not seen[host_index] then
                      table.insert(selected_hosts, host_index)
                      seen[host_index] = true
                    end
                  end
                  
                  -- Set metadata for subset selection
                  local shard_list = table.concat(selected_hosts, ",")
                  request_handle:headers():add("x-shard-assignment", shard_list)
                  
                  -- Pick one host from the shard (round-robin style based on request count)
                  local selected_host = selected_hosts[1]
                  request_handle:headers():add("x-target-host", tostring(selected_host))
                  
                  -- Log for debugging
                  request_handle:logInfo(string.format(
                    "Customer %s -> Shard [%s] -> Routing to host %d",
                    customer_id, shard_list, selected_host
                  ))
                end
          - name: envoy.filters.http.router
            typed_config:
              "@type": type.googleapis.com/envoy.extensions.filters.http.router.v3.Router

  clusters:
  - name: service_backend
    connect_timeout: 0.25s
    type: STATIC
    lb_policy: MAGLEV  # Consistent hashing load balancer
    load_assignment:
      cluster_name: service_backend
      endpoints:
      - lb_endpoints:
        - endpoint:
            address:
              socket_address:
                address: host.docker.internal
                port_value: 8001
            metadata:
              filter_metadata:
                envoy.lb:
                  host_id: "0"
        - endpoint:
            address:
              socket_address:
                address: host.docker.internal
                port_value: 8002
            metadata:
              filter_metadata:
                envoy.lb:
                  host_id: "1"
        - endpoint:
            address:
              socket_address:
                address: host.docker.internal
                port_value: 8003
            metadata:
              filter_metadata:
                envoy.lb:
                  host_id: "2"
        - endpoint:
            address:
              socket_address:
                address: host.docker.internal
                port_value: 8004
            metadata:
